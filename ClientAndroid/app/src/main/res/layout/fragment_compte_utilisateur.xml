<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".présentation.compte.VueCompteUtilisateur">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_poste2">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="287dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/vue_coin_rond"
            android:gravity="center"
            android:text="Mon Compte"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="26dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="249dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            android:background="@drawable/vue_coin_rond"
            android:fontFamily="@font/goudy_bookletter1911_regular"
            android:text="Mon Avatar:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPhotoChange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/btnPhotoChange"
            android:layout_width="101dp"
            android:layout_height="83dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/vue_coin_rond"
            android:src="@drawable/tete_de_mort"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/compteNom1"
            android:layout_width="176dp"
            android:layout_height="48dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="97dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/vue_coin_rond"
            android:ems="10"
            android:fontFamily="@font/goudy_bookletter1911_regular"
            android:inputType="textPersonName"
            android:text="Bob"
            android:textAlignment="center"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnPhotoChange"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="142dp"
            android:layout_height="243dp"
            android:layout_marginStart="61dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/vue_coin_rond"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPhotoChange">

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:inputType="textPersonName"
                android:paddingLeft="5dp"
                android:text="Informations"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:text="Prénom:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/comptePrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Marley"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:text="Nom:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/compteNom2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Bob"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:text="Courriel:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/compteCourriel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="bobmarley@crosemont.qc.ca"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:text="Département:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/compteDepartement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Info"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:text="Poste:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/comptePoste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:text="Étudiant"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btnModifier"
            android:layout_width="164dp"
            android:layout_height="50dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="58dp"
            android:backgroundTint="#d9534f"
            android:fontFamily="@font/goudy_bookletter1911_regular"
            android:text="Modifier"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="144dp"
            android:layout_height="46dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/vue_coin_rond"
            android:fontFamily="@font/goudy_bookletter1911_regular"
            android:gravity="center"
            android:text="Équipes"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compteNom1" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="145dp"
            android:layout_height="18dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="39dp"
            android:background="@drawable/vue_coin_rond"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/goudy_bookletter1911_regular"
                android:text="Dans aucune équipe"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>