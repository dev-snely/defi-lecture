<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/tv_itemCompteTotalDoublon"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toStartOf="@+id/icDoublon"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="0"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icDoublon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_itemPseudonyme"
        android:layout_marginStart="5dp"
        android:background="#00FEFEFE"
        android:src="@drawable/locked_chest_svgrepo_com"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemCompteTotalDoublon"
        app:layout_constraintStart_toEndOf="@+id/tv_itemCompteTotalDoublon"
        app:layout_constraintTop_toTopOf="@+id/tv_itemCompteTotalDoublon" />

    <TextView
        android:id="@+id/tv_itemPseudonyme"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="Pseudonyme d'un compte"
        app:layout_constraintBottom_toBottomOf="@+id/icDoublon"
        app:layout_constraintStart_toEndOf="@+id/icDoublon"
        app:layout_constraintTop_toTopOf="@+id/icDoublon" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:contentDescription="@string/Supprimer"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemPseudonyme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_itemPseudonyme"
        app:srcCompat="@drawable/delete_svgrepo_com" />


</androidx.constraintlayout.widget.ConstraintLayout>