<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".présentation.langage.VueLangage">

    <Button
        android:id="@+id/btnAnglais"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="56dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="Anglais"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnFrancais"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnFrancais"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="409dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="Français"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnglais" />


</androidx.constraintlayout.widget.ConstraintLayout>