<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DeconnexionBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:id="@+id/btnGlossaire"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:textSize="20dp"
        android:text="Glossaire"
        app:layout_constraintBottom_toTopOf="@+id/btnAPropos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLangage" />

    <Button
        android:id="@+id/btnLangage"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="Langage"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGlossaire"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeconnexion"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="186dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="Déconnexion"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAPropos" />

    <Button
        android:id="@+id/btnAPropos"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/goudy_bookletter1911_regular"
        android:text="À propos"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeconnexion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGlossaire" />

</androidx.constraintlayout.widget.ConstraintLayout>